{
  "name": "scandy-desktop",
  "version": "1.0.0",
  "main": "app/electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.scandy.desktop",
    "productName": "Scandy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "!app/database/*",
      "!**/*.pyc",
      "!**/__pycache__"
    ],
    "extraResources": [
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "venv",
        "to": "venv",
        "filter": ["**/*", "!**/*.pyc", "!**/__pycache__"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "app/static/img/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "app/static/img/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Scandy",
      "installerIcon": "app/static/img/icon.ico",
      "uninstallerIcon": "app/static/img/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Woschj/Scandy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Woschj/Scandy/issues"
  },
  "homepage": "https://github.com/Woschj/Scandy#readme",
  "description": "Inventarverwaltung mit Barcode-Scanner"
} 